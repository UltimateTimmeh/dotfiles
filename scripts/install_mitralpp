#!/usr/bin/env bash
# MITRAL-pp software/config installation module.

# Source utility functions.
SCRIPTSDIR="$(dirname "$(pwd)/$0")"
. "$SCRIPTSDIR/utils"

# Software installation.
software() {
  Q="Install MITRAL-pp? [y/n] "
  if ask "$Q"; then
    read -rp "Username for 'https://net.feops.com': " USER
    REP="https://$USER@net.feops.com/gitlab/feops/MITRAL-pp.git"
    TGT="$HOME/Documents/feops/mitral/mitral-pp"
    install_git_repo "$REP" "$TGT"
  fi
}

# Config installation.
config() {
  Q="Install MITRAL-pp config? [y/n] "
  if ask "$Q"; then
    install_symlink_to ".config/pyformex/mitralpp.conf"
  fi
}
