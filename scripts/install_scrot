#!/usr/bin/env bash
# scrot software/config installation module.

# Source utility functions.
SCRIPTSDIR="$(dirname "$(pwd)/$0")"
. "$SCRIPTSDIR/utils"

# Software installation.
software() {
  Q="Install scrot? [y/n] "
  if ask "$Q"; then
    PKG="scrot"
    sudo apt-get install $PKG
  fi
}

# Config installation.
config() {
  return
}
